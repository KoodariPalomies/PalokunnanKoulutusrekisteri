<BorderPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="palokunnanKoulutusrekisteri.KoulutusrekisteriGUIController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu text="_Tiedosto">
            <items>
              <MenuItem text="_Tallenna" onAction="#handleTallenna" >
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
    	          <MenuItem text="Avaa..." onAction="#handleAvaa">
    	          	<accelerator>
                        <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                  </MenuItem>
	              <MenuItem mnemonicParsing="false" text="Tulosta..." onAction="#handleTulosta">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="true" text="_Muokkaa">
            <items>
	              <MenuItem mnemonicParsing="true" text="Uusi työntekijä" onAction="#handleUusiTyontekija">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="true" text="Muokkaa työntekijää..." onAction="#handleMuokkaaTyontekija">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
	              <MenuItem mnemonicParsing="true" text="Lisää koulutus" onAction="#handleLisaaKoulutus">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="true" text="Muokkaa koulutusta..." onAction="#handleMuokkaaKoulutusta">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
	              <MenuItem mnemonicParsing="false" text="Poista työntekijä..." onAction="#handlePoistaTyontekija">
	                 <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
	              <MenuItem mnemonicParsing="false" text="Poista koulutus" onAction="#handlePoistaKoulutus">
	                 <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="true" text="_Apua">
            <items>
	              <MenuItem mnemonicParsing="false" text="Apua" onAction="#handleApua">
	              	 <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                 </MenuItem>
    	         <MenuItem mnemonicParsing="false" text="Tietoja..." onAction="#handleTietoja">
    	          	 <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                 </MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
