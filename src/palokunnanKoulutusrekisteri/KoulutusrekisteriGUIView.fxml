                  					<Tooltip text="Muokkaa työntekijää" />
                  				</tooltip>
                  			  </Button>
                  			  
                  			  
                  			  
                  			  <Label text="Työntekijän koulutukset:" GridPane.columnIndex="0" GridPane.rowIndex="7" maxWidth="200.0" prefWidth="200.0"/>
