						<ListChooser fx:id="chooserKoulutukset" maxHeight="1.7976931348623157E308" prefHeight="250.0" maxWidth="250.0" rivit="Vesisukeltaja&#10;Nostolava&#10;Kemikaalivalvonta -peruskurssi&#10;" BorderPane.alignment="CENTER" />
